{% extends 'base.html.twig' %}

{% block title %}Name index{% endblock %}

{% block body %}
    <h1>Name index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Published</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for name in names %}
            <tr>
                <td>{{ name.id }}</td>
                <td>{{ name.name }}</td>
                <td>{{ name.published ? 'Yes' : 'No' }}</td>
                <td>{{ name.description }}</td>
                <td>
                    <a href="{{ path('app_name_show', {'id': name.id}) }}">show</a>
                    <a href="{{ path('app_name_edit', {'id': name.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_name_new') }}">Create new</a>
{% endblock %}
